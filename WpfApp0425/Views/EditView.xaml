<Window x:Class="WpfApp0425.Views.EditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp0425.Views"
        mc:Ignorable="d"
        Title="EditView" Height="450" Width="800">
    <StackPanel Width="400">

        <Label Margin="5" FontSize="24" Content="Model"></Label>
        <TextBox FontSize="24" Text="{Binding EditPrinter.Model,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Label Margin="5" FontSize="24" Content="Vendor"></Label>
        <TextBox FontSize="24" Text="{Binding EditPrinter.Vendor,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Label Margin="5" FontSize="24" Content="Color"></Label>
        <TextBox FontSize="24" Text="{Binding EditPrinter.Color,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Button Content="Save" FontSize="24" Command="{Binding SaveCommand}"></Button>

    </StackPanel>
</Window>
